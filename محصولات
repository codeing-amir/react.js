    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        // راه‌اندازی AOS برای انیمیشن‌ها
        document.addEventListener('DOMContentLoaded', function() {
            AOS.init({
                duration: 1000,
                once: true,
                easing: 'ease-in-out'
            });

            // شبیه‌سازی بارگذاری متخصصان
            const loadMoreBtn = document.querySelector('.btn-outline-primary');
            if (loadMoreBtn) {
                loadMoreBtn.addEventListener('click', function() {
                    this.innerHTML = 'در حال بارگذاری... <div class="spinner-border spinner-border-sm me-2"></div>';
                    setTimeout(() => {
                        this.innerHTML = 'متخصصان بیشتری بارگذاری شد!';
                        this.classList.remove('btn-outline-primary');
                        this.classList.add('btn-success');
                    }, 1500);
                });
            }

            // تغییر وضعیت آنلاین/آفلاین
            setInterval(() => {
                const onlineStatuses = document.querySelectorAll('.online-status, .offline-status');
                onlineStatuses.forEach(status => {
                    if (Math.random() > 0.3) {
                        status.style.backgroundColor = '#28a745';
                        status.classList.remove('offline-status');
                        status.classList.add('online-status');
                    } else {
                        status.style.backgroundColor = '#6c757d';
                        status.classList.remove('online-status');
                        status.classList.add('offline-status');
                    }
                });
            }, 5000);

            // باز کردن مودال چت
            const chatBubble = document.querySelector('.chat-bubble');
            if (chatBubble) {
                chatBubble.addEventListener('click', function() {
                    alert('سیستم چت به زودی راه‌اندازی خواهد شد!');
                });
            }
        });
    </script>
</body>
</html>
